<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tic Tac Toe" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btn1" Click="Button_Click" Grid.Row="0" Grid.Column="0" />
        <Button x:Name="btn2" Click="Button_Click" Grid.Row="0" Grid.Column="1" />
        <Button x:Name="btn3" Click="Button_Click" Grid.Row="0" Grid.Column="2" />
        <Button x:Name="btn4" Click="Button_Click" Grid.Row="1" Grid.Column="0" />
        <Button x:Name="btn5" Click="Button_Click" Grid.Row="1" Grid.Column="1" />
        <Button x:Name="btn6" Click="Button_Click" Grid.Row="1" Grid.Column="2" />
        <Button x:Name="btn7" Click="Button_Click" Grid.Row="2" Grid.Column="0" />
        <Button x:Name="btn8" Click="Button_Click" Grid.Row="2" Grid.Column="1" />
        <Button x:Name="btn9" Click="Button_Click" Grid.Row="2" Grid.Column="2" />
    </Grid>
</Window>